#!/bin/sh

# you can set keybinding in sxhkrc for better usecase
# alt + shift + l
#   sh /usr/local/bin/passrofi

export LANG="en_US.UTF-8"

ls ~/.password-store | cut --delimiter="." --fields=1 | rofi -dmenu -p "OTP: " | xargs -I {} pass otp {} | xargs -I {} xdotool type --window getactivewindow {}
